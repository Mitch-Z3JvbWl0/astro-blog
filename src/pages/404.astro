---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <title>Page Not Found | Gromit's Lab</title>
    <meta name="robots" content="noindex" />
    <meta name="description" content="Sorry, this page doesn't exist. Return to Gromit's Lab homepage." />
    <style>
      .container {
        max-width: 800px;
        margin: 4rem auto;
        padding: 1rem;
        text-align: center;
        font-family: system-ui, sans-serif;
      }
      .big {
        font-size: 5rem;
        margin: 0;
        color: #444;
      }
      .message {
        font-size: 1.5rem;
        margin: 1rem 0 2rem;
      }
      a.button {
        display: inline-block;
        background-color: #007acc;
        color: white;
        padding: 0.75rem 1.5rem;
        text-decoration: none;
        border-radius: 6px;
      }
      a.button:hover {
        background-color: #005fa3;
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="container">
      <h1 class="big">404</h1>
      <p class="message">Oops! That page doesn't exist.</p>
      <a class="button" href="/">Return Home</a>
    </main>
    <Footer />
  </body>
</html>
