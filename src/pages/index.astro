---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogGrid from '../components/BlogGrid.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<main class="max-w-5xl mx-auto px-4 py-16">
<!-- Hero Section with Icon and Title Side by Side -->
<div class="flex justify-center items-center gap-4 my-10">
  <div class="h-16 w-16 rounded-full overflow-hidden border-4 border-gray-300 shadow">
    <img src="/images/grom+logo.png" alt="Gromit Lab Icon" class="h-full w-full object-cover" />
  </div>
  <h1 class="text-3xl font-bold">Gromit's Lab</h1>
</div>

			<BlogGrid />
		</main>
		<Footer />
	</body>
</html>