---
import { getCollection } from 'astro:content';
import FormattedDate from './FormattedDate.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<style>
  .post-list {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .post-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    align-items: flex-start;
  }

  .post-image {
    width: 200px;
    height: 120px;
    flex-shrink: 0;
    overflow: hidden;
    border-radius: 8px;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 8px;
  }

  .post-content {
    flex-grow: 1;
  }

  .post-title {
    font-size: 1.25rem;
    font-weight: bold;
    margin: 0 0 0.25rem 0;
    color: rgb(var(--black));
  }

  .post-date {
    font-size: 0.9rem;
    color: rgb(var(--gray));
    margin: 0;
  }

  .post-item a {
    text-decoration: none;
    color: inherit;
  }

  .post-item a:hover .post-title {
    color: rgb(var(--accent));
  }

  @media (max-width: 720px) {
    .post-item {
      flex-direction: column;
    }

    .post-image {
      width: 100%;
      height: 180px;
    }
  }
</style>

<section class="post-list">
  {
    posts.map(post => (
      <div class="post-item">
        <a href={`/blog/${post.id}/`} class="post-image">
          {post.data.heroImage && (
            <Image src={post.data.heroImage} width={720} height={360} alt={post.data.title} />
          )}
        </a>
        <div class="post-content">
          <a href={`/blog/${post.id}/`}>
            <h2 class="post-title">{post.data.title}</h2>
          </a>
          <p class="post-date">
            <FormattedDate date={post.data.pubDate} />
          </p>
        </div>
      </div>
    ))
  }
</section>
