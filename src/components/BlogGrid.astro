---
import { getCollection } from 'astro:content';
import FormattedDate from './FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<ul class="blog-grid">
  {posts.map((post, index) => (
    <li class={index === 0 ? 'featured' : ''}>
      <a href={`/blog/${post.id}/`}>
        {post.data.heroImage && (
          <img src={post.data.heroImage.src} alt={post.data.title} />
        )}
        <h4 class="title">{post.data.title}</h4>
        <p class="date"><FormattedDate date={post.data.pubDate} /></p>
      </a>
    </li>
  ))}
</ul>

<style>
  .blog-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    list-style: none;
    padding: 0;
    margin: 0 auto;
    max-width: 960px;
  }

  .blog-grid li {
    width: calc(50% - 1rem);
  }

  .blog-grid li.featured {
    width: 100%;
    text-align: center;
  }

  .blog-grid li.featured img {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 12px;
  }

  .blog-grid li img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin-bottom: 0.5rem;
  }

  .title {
    margin: 0;
    color: rgb(var(--black));
    line-height: 1.3;
  }

  .date {
    margin: 0;
    color: rgb(var(--gray));
  }

  .blog-grid li a {
    text-decoration: none;
    display: block;
    transition: 0.2s ease;
  }

  .blog-grid li a:hover h4,
  .blog-grid li a:hover .date {
    color: rgb(var(--accent));
  }

  .blog-grid li a:hover img {
    box-shadow: var(--box-shadow);
  }

  @media (max-width: 720px) {
    .blog-grid li {
      width: 100%;
      text-align: center;
    }

    .blog-grid li.featured .title {
      font-size: 1.563em;
    }
  }
</style>
